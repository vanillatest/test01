     server {
       listen 80 default_server;
       listen [::]:80 default_server ipv6only=on;
       listen 443 ssl;
       
       root /usr/share/nginx/www;
       index index.html index.htm;

       server_name {{server_name}};
       ssl_certificate {{crt}};
       ssl_certificate_key {{key}};

       location / {
         proxy_pass http://{{ server_name }};
	}
     }
